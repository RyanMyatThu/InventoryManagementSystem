@page "/"
@inject IViewInventoriesByNameUseCase ViewInventoriesByNameUseCase;
@inject IViewCustomersByNameUseCase ViewCustomersByNameUseCase;
@inject IGetAllReportsUseCase GetAllReportsUseCase;
@rendermode InteractiveServer

<PageTitle>Dashboard - Inventory Management System</PageTitle>

<div class="dashboard-container">
    <!-- Header -->
    <div class="mb-5">
        <h1 class="display-6 fw-bold mb-2">Dashboard</h1>
        <p class="text-muted">Welcome back! Here's an overview of your inventory management system.</p>
    </div>

    @if (customers != null && inventories != null && reports != null)
    {
        <!-- Statistics Cards -->
        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card stat-card stat-card-primary h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-uppercase text-muted mb-3 fw-semibold small">Total Customers</h6>
                                <h2 class="fw-bold mb-0">@customers.Count</h2>
                                <p class="text-muted small mb-0 mt-2">
                                    <i class="bi bi-people-fill me-1"></i>
                                    Active customers
                                </p>
                            </div>
                            <div class="stat-icon">
                                <div class="rounded-circle bg-primary bg-opacity-10 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                    <i class="bi bi-people-fill fs-3 text-primary"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 pt-0">
                        <a href="/customers" class="btn btn-sm btn-link text-primary p-0">
                            View all <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card stat-card stat-card-success h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-uppercase text-muted mb-3 fw-semibold small">Total Inventories</h6>
                                <h2 class="fw-bold mb-0">@inventories.Count</h2>
                                <p class="text-muted small mb-0 mt-2">
                                    <i class="bi bi-box-seam-fill me-1"></i>
                                    Available items
                                </p>
                            </div>
                            <div class="stat-icon">
                                <div class="rounded-circle bg-success bg-opacity-10 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                    <i class="bi bi-box-seam-fill fs-3 text-success"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 pt-0">
                        <a href="/inventories" class="btn btn-sm btn-link text-success p-0">
                            View all <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card stat-card stat-card-info h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="text-uppercase text-muted mb-3 fw-semibold small">Total Reports</h6>
                                <h2 class="fw-bold mb-0">@reports.Count</h2>
                                <p class="text-muted small mb-0 mt-2">
                                    <i class="bi bi-graph-up me-1"></i>
                                    Purchase records
                                </p>
                            </div>
                            <div class="stat-icon">
                                <div class="rounded-circle bg-info bg-opacity-10 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                    <i class="bi bi-graph-up fs-3 text-info"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 pt-0">
                        <a href="/reports" class="btn btn-sm btn-link text-info p-0">
                            View all <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-white">
                        <h5 class="mb-0 fw-semibold">Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <a href="/customers" class="btn btn-outline-primary w-100 d-flex flex-column align-items-center py-3">
                                    <i class="bi bi-person-plus-fill fs-3 mb-2"></i>
                                    <span>Add Customer</span>
                                </a>
                            </div>
                            <div class="col-md-3">
                                <a href="/inventories" class="btn btn-outline-success w-100 d-flex flex-column align-items-center py-3">
                                    <i class="bi bi-box-seam fs-3 mb-2"></i>
                                    <span>Add Inventory</span>
                                </a>
                            </div>
                            <div class="col-md-3">
                                <a href="/reports" class="btn btn-outline-info w-100 d-flex flex-column align-items-center py-3">
                                    <i class="bi bi-file-earmark-plus fs-3 mb-2"></i>
                                    <span>Create Report</span>
                                </a>
                            </div>
                            <div class="col-md-3">
                                <a href="/reports" class="btn btn-outline-secondary w-100 d-flex flex-column align-items-center py-3">
                                    <i class="bi bi-graph-up-arrow fs-3 mb-2"></i>
                                    <span>View Reports</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-semibold">Recent Customers</h5>
                        <a href="/customers" class="btn btn-sm btn-link text-primary p-0">View all</a>
                    </div>
                    <div class="card-body">
                        @if (customers.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var customer in customers.Take(5))
                                {
                                    <div class="list-group-item border-0 px-0 py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                <strong>@GetInitials(customer.CustomerName)</strong>
                                            </div>
                                            <div class="flex-grow-1">
                                                <h6 class="mb-0 fw-semibold">@customer.CustomerName</h6>
                                                <small class="text-muted">
                                                    <i class="bi bi-telephone me-1"></i>@customer.Phone
                                                </small>
                                            </div>
                                            <span class="badge bg-primary">@customer.TotalItems items</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="bi bi-people fs-1 text-muted"></i>
                                <p class="text-muted mt-2 mb-0">No customers yet</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 fw-semibold">Recent Inventories</h5>
                        <a href="/inventories" class="btn btn-sm btn-link text-primary p-0">View all</a>
                    </div>
                    <div class="card-body">
                        @if (inventories.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var inventory in inventories.Take(5))
                                {
                                    <div class="list-group-item border-0 px-0 py-3">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-circle bg-success bg-opacity-10 d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                    <i class="bi bi-box-seam-fill text-success"></i>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0 fw-semibold">@inventory.InventoryName</h6>
                                                    <small class="text-muted">Inventory Item</small>
                                                </div>
                                            </div>
                                            <div class="text-end">
                                                <h6 class="mb-0 fw-bold text-success">@inventory.Price.ToString("N0") MMK</h6>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="bi bi-box fs-1 text-muted"></i>
                                <p class="text-muted mt-2 mb-0">No inventories yet</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="text-muted mt-3">Loading dashboard data...</p>
        </div>
    }
</div>

<style>
    .dashboard-container {
        max-width: 1400px;
    }

    .stat-card {
        border: none;
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-4px);
    }

    .stat-card-primary {
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(99, 102, 241, 0.05) 100%);
    }

    .stat-card-success {
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(16, 185, 129, 0.05) 100%);
    }

    .stat-card-info {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(59, 130, 246, 0.05) 100%);
    }
</style>

@code {
    private List<Customer>? customers;
    private List<Inventory>? inventories;
    private List<Reports>? reports;

    protected override async Task OnInitializedAsync()
    {
        customers = (await ViewCustomersByNameUseCase.ExecuteAsync()).ToList();
        inventories = (await ViewInventoriesByNameUseCase.ExecuteAsync()).ToList();
        reports = (await GetAllReportsUseCase.ExecuteAsync()).ToList();
    }

    private string GetInitials(string value)
    {
        if (string.IsNullOrWhiteSpace(value))
            return "??";
            
        var initials = string.Concat(value
           .Split(new[] { ' ' }, StringSplitOptions.RemoveEmptyEntries)
           .Where(x => x.Length >= 1 && char.IsLetter(x[0]))
           .Select(x => char.ToUpper(x[0])));
           
        return initials.Length > 0 ? initials.Substring(0, Math.Min(2, initials.Length)) : "??";
    }
}
