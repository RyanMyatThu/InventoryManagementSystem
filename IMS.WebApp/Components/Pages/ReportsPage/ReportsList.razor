@page "/reports"
@rendermode InteractiveServer
<PageTitle>Reports - Inventory Management System</PageTitle>
@if (customers != null && reports != null)
{
    <div class="page-container">
        <div class="page-header mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 fw-bold mb-2">Reports & Purchases</h1>
                    <p class="text-muted mb-0">Manage and track customer purchase reports</p>
                </div>
                <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#AddReportModal">
                    <i class="bi bi-plus-lg me-2"></i>Create Report
                </a>
            </div>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header bg-white">
                        <h6 class="mb-0 fw-semibold">Date Filter</h6>
                    </div>
                    <div class="card-body">
                        <CalandarComponent />
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header bg-white">
                        <h6 class="mb-0 fw-semibold">Customer Filter</h6>
                    </div>
                    <div class="card-body">
                        <CustomerFilters customerList="customers" OnCustomerSelected="OnCustomerSelected" />
                    </div>
                </div>
            </div>
        </div>

        @if (FilteredReports != null && FilteredReports.Any())
        {
            <div class="row g-4">
                @foreach (var report in FilteredReports)
                {
                    <div class="col-sm-6 col-lg-4">
                        <ReportCard Report="report" OnViewReport="OnViewReport"/>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="bi bi-file-earmark-text fs-1 text-muted mb-3"></i>
                    <h5 class="text-muted">No reports found</h5>
                    <p class="text-muted mb-4">@(SelectedCustomer == 0 ? "Get started by creating your first report" : "No reports found for the selected customer")</p>
                    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#AddReportModal">
                        <i class="bi bi-plus-lg me-2"></i>Create Report
                    </a>
                </div>
            </div>
        }
    </div>

    <AddNewReportModalComponent OnReportAdded="LoadList" OpenToast="SaveInvoice" OpenErrorToast="ErrorToast" customerList="customers"></AddNewReportModalComponent>
    <ViewReportModalComponent Report="selectedReport" ></ViewReportModalComponent>
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">User Action Notification</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="toast-body">
            </div>
        </div>
    </div>
}
@code {

    [Inject] IJSRuntime JSRuntime { get; set; } = default!;
    [Inject] IViewCustomersByNameUseCase ViewCustomersByNameUseCase { get; set; } = default!;
    [Inject] IGetAllReportsUseCase GetAllReportsUseCase { get; set; } = default!;
    [Inject] IGetReportByIDUseCase GetReportByIDUseCase { get; set; } = default!;

    private int SelectedCustomer = 0;
    private List<Customer>? customers;
    private List<Reports>? reports;
    private Reports? selectedReport;

    protected override async Task OnInitializedAsync()
    {
        customers = (await ViewCustomersByNameUseCase.ExecuteAsync()).ToList();
        reports = (await GetAllReportsUseCase.ExecuteAsync()).ToList();

    }


    private List<Reports>? FilteredReports => 
        SelectedCustomer == 0 
        ? reports 
        : reports.Where(r => r.CustomerId == SelectedCustomer).ToList();

    private void OnCustomerSelected(int id)
    {
        SelectedCustomer = id;
    }

    private async Task LoadList()
    {
        reports = (await GetAllReportsUseCase.ExecuteAsync()).ToList();
        StateHasChanged();

    }


    private async Task SaveInvoice()
    {
        await JSRuntime.InvokeVoidAsync("showSaveSuccessful");

    }

    private async Task EditProduct()
    {
        await JSRuntime.InvokeVoidAsync("showEditSuccessful");
    }

    private async Task DeleteProduct()
    {
        await JSRuntime.InvokeVoidAsync("showDeleteSuccessful");
    }

    private async Task ErrorToast()
    {
        await JSRuntime.InvokeVoidAsync("showErrorToast");

    }

    private async Task OnViewReport(int reportId)
    {
        selectedReport = await GetReportByIDUseCase.ExecuteAsync(reportId);
    }

}
