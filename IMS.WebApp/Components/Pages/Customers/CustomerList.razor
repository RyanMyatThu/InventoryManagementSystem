@page "/customers"
@rendermode InteractiveServer

<PageTitle>Customers - Inventory Management System</PageTitle>

@if(customers != null){
<div class="page-container">
    <div class="page-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 fw-bold mb-2">Customer Management</h1>
                <p class="text-muted mb-0">Manage your customers and track their purchase history</p>
            </div>
            <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#AddCustomerModal">
                <i class="bi bi-plus-lg me-2"></i>Add Customer
            </a>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card stat-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-2 fw-semibold small">Total Customers</h6>
                            <h2 class="fw-bold mb-0">@customers.Count()</h2>
                        </div>
                        <div class="rounded-circle bg-primary bg-opacity-10 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                            <i class="bi bi-people-fill fs-4 text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stat-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-2 fw-semibold small">Total Items</h6>
                            <h2 class="fw-bold mb-0">@customers.Sum(c => c.TotalItems)</h2>
                        </div>
                        <div class="rounded-circle bg-success bg-opacity-10 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                            <i class="bi bi-box-seam-fill fs-4 text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stat-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase text-muted mb-2 fw-semibold small">Avg Items/Customer</h6>
                            <h2 class="fw-bold mb-0">@(customers.Count() > 0 ? Math.Round(customers.Average(c => c.TotalItems), 1) : 0)</h2>
                        </div>
                        <div class="rounded-circle bg-info bg-opacity-10 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                            <i class="bi bi-graph-up fs-4 text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row g-4">
        @foreach (var customer in customers)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 customer-card">
                    <div class="card-header bg-white border-0 pb-0">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3"
                                     style="width: 56px; height: 56px; font-size: 18px; font-weight: 600;">
                                    @GetInitials(customer.CustomerName)
                                </div>
                                <div>
                                    <h5 class="card-title mb-1 fw-bold">@customer.CustomerName</h5>
                                    <small class="text-muted">
                                        <i class="bi bi-box-seam me-1"></i>@customer.TotalItems item(s)
                                    </small>
                                </div>
                            </div>
                            <button type="button"
                                    class="btn btn-sm btn-outline-primary"
                                    data-bs-toggle="modal" data-bs-target="#EditCustomerModal"
                                    @onclick="() => HandleEditClick(customer.CustomerId, customer.CustomerName, customer.Phone, customer.Address, customer.CustomerPrices)">
                                <i class="bi bi-pencil"></i>
                            </button>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="mb-3">
                            <p class="mb-2 d-flex align-items-center">
                                <i class="bi bi-telephone me-2 text-primary"></i>
                                <span class="text-muted">@customer.Phone</span>
                            </p>
                            <p class="mb-0 d-flex align-items-start">
                                <i class="bi bi-geo-alt me-2 text-primary mt-1"></i>
                                <span class="text-muted">@customer.Address</span>
                            </p>
                        </div>

                        @if (customer.CustomerPrices != null && customer.CustomerPrices.Any())
                        {
                            <div class="border-top pt-3">
                                <h6 class="fw-semibold small mb-2 text-muted">Items Purchased:</h6>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var customerPrice in customer.CustomerPrices)
                                    {
                                        <span class="badge bg-primary bg-opacity-10 text-primary border border-primary border-opacity-25 px-3 py-2">
                                            @customerPrice.Inventory.InventoryName
                                        </span>
                                    }
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="border-top pt-3">
                                <small class="text-muted">
                                    <i class="bi bi-info-circle me-1"></i>No items purchased yet
                                </small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

        <AddCustomerModalComponent OnCustomerAdded="LoadList" OpenToast="AddCustomer" OpenErrorToast="ErrorToast"></AddCustomerModalComponent>


        <EditCustomerModalComponent OpenDeletedToast="RemoveCustomer" customerName="@(!string.IsNullOrEmpty(selectedCustomerName) ? selectedCustomerName.Trim() : "")" address="@(!string.IsNullOrEmpty(selectedCustomerAddress) ? selectedCustomerAddress.Trim() : "")" customerId="@(selectedCustomerId != 0 ? selectedCustomerId : 0)" phone="@(!string.IsNullOrEmpty(selectedCustomerPhone) ? selectedCustomerPhone.Trim() : "")" customerPrices="@customerPrices" inventories="@inventories" OpenToast="EditCustomer" OpenErrorToast="ErrorToast" OnCustomerEdited="LoadList"></EditCustomerModalComponent>
        
    @if (customers.Count == 0)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-people fs-1 text-muted mb-3"></i>
                <h5 class="text-muted">No customers yet</h5>
                <p class="text-muted mb-4">Get started by adding your first customer</p>
                <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#AddCustomerModal">
                    <i class="bi bi-plus-lg me-2"></i>Add Customer
                </a>
            </div>
        </div>
    }
</div>

<style>
    .page-container {
        max-width: 1400px;
    }

    .customer-card {
        transition: all 0.3s ease;
    }

    .customer-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }
</style>
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">User Action Notification</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="toast-body">
            </div>
        </div>
    </div>
}

@code {
    [Inject] IJSRuntime JSRuntime { get; set; } = default!;
    [Inject] IViewInventoriesByNameUseCase ViewInventoriesByNameUseCase { get; set; } = default!;
    [Inject] IViewCustomersByNameUseCase ViewCustomersByNameUseCase { get; set; } = default!;
    private List<Customer>? customers;

    private int selectedCustomerId = 0;
    private string selectedCustomerName = "";
    private string selectedCustomerPhone = "";
    private string selectedCustomerAddress = "";
    private ICollection<CustomerPrice>? customerPrices;
    private List<Inventory>? inventories;

    protected override async Task OnInitializedAsync()
    {
        customers = (await ViewCustomersByNameUseCase.ExecuteAsync()).ToList();
        inventories = (await ViewInventoriesByNameUseCase.ExecuteAsync()).ToList();
    }
   
    private string GetInitials( string value){
        return string.Concat(value
           .Split(new[] { ' ' }, StringSplitOptions.RemoveEmptyEntries)
           .Where(x => x.Length >= 1 && char.IsLetter(x[0]))
           .Select(x => char.ToUpper(x[0])));
    }

    private async Task LoadList()
    {
        customers = (await ViewCustomersByNameUseCase.ExecuteAsync()).ToList();
        StateHasChanged();

    }

    private void HandleEditClick(int id, string name, string phone, string address, ICollection<CustomerPrice> customerPricesList)
    {
        selectedCustomerId = id;
        selectedCustomerName = name;
        selectedCustomerPhone = phone;
        selectedCustomerAddress = address;
        customerPrices = customerPricesList;

    }

    private async Task AddCustomer()
    {
        await JSRuntime.InvokeVoidAsync("showAddSuccessful");
    }

    private async Task EditCustomer()
    {
        await JSRuntime.InvokeVoidAsync("showEditSuccessful");
    }


    private async Task ErrorToast()
    {
        await JSRuntime.InvokeVoidAsync("showErrorToast");
    }

    private async Task RemoveCustomer()
    {
        await JSRuntime.InvokeVoidAsync("showDeleteSuccessful");
    }
}

