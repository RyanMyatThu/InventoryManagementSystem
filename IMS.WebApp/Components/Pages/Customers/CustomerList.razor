@page "/customers"
@rendermode InteractiveServer

<PageTitle>Customers</PageTitle>

@if(customers != null){
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold">Customer Profiles</h1>
            <p class="text-muted">Manage your customers and track their purchase history</p>
        </div>
            <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#AddCustomerModal">
            <i class="bi bi-plus-lg me-2"></i> Add Customer
        </a>
    </div>

    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="text-muted">Total Customers</h6>
                    <h3>@customers.Count()</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="text-muted">Total Items</h6>
                    <h3>-</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="text-muted">Average per Customer</h6>
                    <h3>-</h3>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        @foreach (var customer in customers)
        {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">

                        <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center"
                                     style="width:56px; height:56px; font-size:18px;">
                                    <strong>@GetInitials(customer.CustomerName)</strong>
                                </div>
                                <div class="ms-3">
                                    <h5 class="card-title mb-1">@customer.CustomerName</h5>
                                    <small class="text-muted">@customer.TotalItems item(s)</small>
                                </div>
                            </div>

                            <button type="button"
                                    class="btn btn-sm btn-outline-primary"
                                    data-bs-toggle="modal" data-bs-target="#EditCustomerModal"

                                    @onclick="() => HandleEditClick(customer.CustomerId, customer.CustomerName, customer.Phone, customer.Address, customer.CustomerPrices)"
                                    >
                                <i class="bi bi-pencil"></i>
                            </button>
                        </div>

                        <div class="card-body p-4">
                            <p class="mb-2">
                                <i class="bi bi-telephone me-2 text-muted"></i>
                                <span>@customer.Phone</span>
                            </p>
                            <p class="mb-3">
                                <i class="bi bi-geo-alt me-2 text-muted"></i>
                                <span>@customer.Address</span>
                            </p>

                            <h6 class="fw-bold small mb-2">Items Purchased:</h6>
                            <div class="d-flex flex-wrap gap-1">
                                @foreach (var customerPrice in customer.CustomerPrices)
                                {
                                    <span class="badge rounded-pill text-bg-dark p-2">
                                        @customerPrice.Inventory.InventoryName
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>

        }
    </div>

        <AddCustomerModalComponent OnCustomerAdded="LoadList" OpenToast="AddCustomer" OpenErrorToast="ErrorToast"></AddCustomerModalComponent>


        <EditCustomerModalComponent OpenDeletedToast="RemoveCustomer" customerName="@(!string.IsNullOrEmpty(selectedCustomerName) ? selectedCustomerName.Trim() : "")" address="@(!string.IsNullOrEmpty(selectedCustomerAddress) ? selectedCustomerAddress.Trim() : "")" customerId="@(selectedCustomerId != 0 ? selectedCustomerId : 0)" phone="@(!string.IsNullOrEmpty(selectedCustomerPhone) ? selectedCustomerPhone.Trim() : "")" customerPrices="@customerPrices" inventories="@inventories" OpenToast="EditCustomer" OpenErrorToast="ErrorToast" OnCustomerEdited="LoadList"></EditCustomerModalComponent>
        
    @if (customers.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-bag fs-1 text-muted"></i>
            <p class="mt-3">No customers yet</p>
            <a href="/customers/new" class="btn btn-primary">Add Customer</a>
        </div>
    }
    
</div>
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">User Action Notification</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="toast-body">
            </div>
        </div>
    </div>
}

@code {
    [Inject] IJSRuntime JSRuntime { get; set; } = default!;
    [Inject] IViewInventoriesByNameUseCase ViewInventoriesByNameUseCase { get; set; } = default!;
    [Inject] IViewCustomersByNameUseCase ViewCustomersByNameUseCase { get; set; } = default!;
    private List<Customer>? customers;

    private int selectedCustomerId = 0;
    private string selectedCustomerName = "";
    private string selectedCustomerPhone = "";
    private string selectedCustomerAddress = "";
    private ICollection<CustomerPrice>? customerPrices;
    private List<Inventory>? inventories;

    protected override async Task OnInitializedAsync()
    {
        customers = (await ViewCustomersByNameUseCase.ExecuteAsync()).ToList();
        inventories = (await ViewInventoriesByNameUseCase.ExecuteAsync()).ToList();
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeAsync<bool>("loadSidebarState");
        }
    }
    private string GetInitials( string value){
        return string.Concat(value
           .Split(new[] { ' ' }, StringSplitOptions.RemoveEmptyEntries)
           .Where(x => x.Length >= 1 && char.IsLetter(x[0]))
           .Select(x => char.ToUpper(x[0])));
    }

    private async Task LoadList()
    {
        customers = (await ViewCustomersByNameUseCase.ExecuteAsync()).ToList();
        StateHasChanged();

    }

    private void HandleEditClick(int id, string name, string phone, string address, ICollection<CustomerPrice> customerPricesList)
    {
        selectedCustomerId = id;
        selectedCustomerName = name;
        selectedCustomerPhone = phone;
        selectedCustomerAddress = address;
        customerPrices = customerPricesList;

    }

    private async Task AddCustomer()
    {
        await JSRuntime.InvokeVoidAsync("showAddSuccessful");
    }

    private async Task EditCustomer()
    {
        await JSRuntime.InvokeVoidAsync("showEditSuccessful");
    }


    private async Task ErrorToast()
    {
        await JSRuntime.InvokeVoidAsync("showErrorToast");
    }

    private async Task RemoveCustomer()
    {
        await JSRuntime.InvokeVoidAsync("showDeleteSuccessful");
    }
}

